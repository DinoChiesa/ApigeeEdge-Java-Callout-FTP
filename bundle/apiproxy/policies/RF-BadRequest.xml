<RaiseFault name="RF-BadRequest">
  <DisplayName>RF-BadRequest</DisplayName>
  <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
  <FaultResponse>
   <Set>
     <Payload contentType="application/json" variablePrefix='%'
              variableSuffix='#'>{
 "error" : "Bad Request.  use /upload?remote-file-name=something-goes-here.txt"
}
</Payload>
     <StatusCode>404</StatusCode>
     <ReasonPhrase>Bad Request</ReasonPhrase>
   </Set>
 </FaultResponse>
</RaiseFault>
